{
	"name": "remotepix",
	"displayName": "Remotepix",
	"description": "Share images with AI coding agents running on remote servers via Remote-SSH",
	"version": "2.0.0",
	"publisher": "dkodr",
	"author": "Dariusz Ku≈õnierek",
	"license": "MIT",
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#1e1e1e",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dkodr/remotepix"
	},
	"bugs": {
		"url": "https://github.com/dkodr/remotepix/issues"
	},
	"homepage": "https://github.com/dkodr/remotepix#readme",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other",
		"Snippets",
		"Formatters"
	],
	"keywords": [
		"image",
		"upload",
		"clipboard",
		"paste",
		"remote-ssh",
		"server",
		"screenshot",
		"png",
		"productivity",
		"workflow",
		"development",
		"remote",
		"ssh",
		"file",
		"path",
		"ai",
		"ai-agents",
		"claude",
		"claude-code",
		"copilot",
		"cursor",
		"aider",
		"coding-assistant"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"extensionKind": [
		"ui"
	],
	"contributes": {
		"commands": [
			{
				"command": "remotepix.uploadFromClipboard.editor",
				"title": "Remotepix: Upload Image from Clipboard (Editor)"
			},
			{
				"command": "remotepix.uploadFromClipboard.terminal",
				"title": "Remotepix: Upload Image from Clipboard (Terminal)"
			}
		],
		"keybindings": [
			{
				"command": "remotepix.uploadFromClipboard.editor",
				"key": "ctrl+alt+v",
				"when": "editorTextFocus"
			},
			{
				"command": "remotepix.uploadFromClipboard.terminal",
				"key": "ctrl+v",
				"when": "terminalFocus"
			}
		],
		"configuration": {
			"title": "Remotepix",
			"properties": {
				"remotepix.keybinding": {
					"type": "string",
					"default": "ctrl+v",
					"description": "Keyboard shortcut for uploading images from clipboard in terminal",
					"enum": [
						"ctrl+alt+v",
						"ctrl+shift+v",
						"alt+v",
						"ctrl+v",
						"f12"
					],
					"enumDescriptions": [
						"Ctrl+Alt+V",
						"Ctrl+Shift+V",
						"Alt+V",
						"Ctrl+V (intercepts paste, passes through if no image)",
						"F12"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"clean": "rm -rf out",
		"package": "vsce package",
		"install-package": "code --install-extension *.vsix"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "^20.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {}
}
